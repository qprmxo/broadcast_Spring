<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sqlmap.CategoryMapper">
	
	<insert id="insert" parameterType="category">
		insert into category values(seq_category_num.nextval,#{name},#{id})
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from category where category_num=#{category_num}
	</delete>
		
	<select id="getInfo" parameterType="string" resultType="category">
		select * from category where id=#{id}
	</select>
	
</mapper>