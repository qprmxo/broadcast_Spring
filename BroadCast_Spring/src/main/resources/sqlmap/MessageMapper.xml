<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sqlmap.MessageMapper">
	
	<select id="getRecvList" parameterType="hashmap" resultType="message">
		select * from (select m.*,rownum rnum from message m where m.rid=#{rid} and m.deletecheck=0)
		<![CDATA[ where rnum>=#{startRow} and rnum<=#{endRow} ]]>
	</select>
	
	<select id="getSendList" parameterType="string" resultType="message">
		select * from message where sid=#{sid}
	</select>
	
	<select id="getRecvCount" parameterType="string" resultType="int">
		select NVL(count(#{rid}),0) cnt from message where deletecheck=0
	</select>
	
	<insert id="msgSend" parameterType="message">
		insert into message values(seq_msg_num.nextval,#{rid},#{sid},#{content},0,sysdate)
	</insert>
	
	<update id="msgDelete" parameterType="int">
		update message set deletecheck=1 where msg_num=#{msg_num}
	</update>
	
</mapper>